{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.jsonc",
      "**/*.css",
      "**/*.mjs",
      "**/*.cjs"
    ],
    "experimentalScannerIgnores": [
      "**/node_modules/**",
      "**/.next/**",
      "**/dist/**",
      "**/build/**",
      "**/.convex/**",
      "**/convex/_generated/**",
      "**/*.min.js",
      "**/*.min.css",
      "**/coverage/**",
      "**/.turbo/**",
      "**/.vercel/**",
      "**/.netlify/**",
      "**/public/sw.js",
      "**/public/workbox-*.js",
      "**/public/worker-*.js",
      "**/public/fallback-*.js",
      "**/.env",
      "**/.env.*",
      "**/pnpm-lock.yaml",
      "**/package-lock.json",
      "**/yarn.lock",
      "**/bun.lockb"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "bracketSameLine": false,
    "bracketSpacing": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["error", "warn", "info"]
          }
        },
        "noDebugger": "error",
        "noVar": "error"
      },
      "complexity": {
        "noBannedTypes": "error",
        "noUselessConstructor": "error",
        "noUselessFragments": "warn",
        "noUselessRename": "error",
        "noUselessSwitchCase": "error",
        "noUselessTypeConstraint": "error",
        "useArrowFunction": "off",
        "noForEach": "off"
      },
      "correctness": {
        "noUnusedVariables": {
          "level": "warn",
          "fix": "none"
        },
        "noUnusedImports": {
          "level": "warn",
          "fix": "safe"
        },
        "useExhaustiveDependencies": {
          "level": "warn",
          "options": {
            "hooks": [
              {
                "name": "useEffect"
              },
              {
                "name": "useLayoutEffect"
              },
              {
                "name": "useMemo"
              },
              {
                "name": "useCallback"
              },
              {
                "name": "useImperativeHandle"
              }
            ]
          }
        },
        "useHookAtTopLevel": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "noParameterAssign": "error",
        "useConst": {
          "level": "warn",
          "fix": "safe"
        },
        "useTemplate": {
          "level": "warn",
          "fix": "safe"
        },
        "noUselessElse": "warn",
        "useAsConstAssertion": "warn",
        "useConsistentArrayType": {
          "level": "warn",
          "options": {
            "syntax": "shorthand"
          },
          "fix": "safe"
        },
        "useBlockStatements": "off",
        "useDefaultParameterLast": "warn",
        "useExportType": {
          "level": "warn",
          "fix": "safe"
        },
        "useImportType": {
          "level": "warn",
          "fix": "safe"
        },
        "useNodejsImportProtocol": "off",
        "useNumberNamespace": "warn",
        "useShorthandFunctionType": "warn",
        "useSingleVarDeclarator": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn",
        "useValidAnchor": "warn",
        "useButtonType": "warn",
        "useAltText": "warn",
        "noAutofocus": "off",
        "useHtmlLang": "warn",
        "useValidAriaProps": "error",
        "useValidAriaRole": "error",
        "useValidAriaValues": "error",
        "noAccessKey": "warn",
        "noDistractingElements": "error",
        "noHeaderScope": "warn",
        "noRedundantAlt": "warn",
        "noRedundantRoles": "warn",
        "useAnchorContent": "warn",
        "useAriaPropsForRole": "warn",
        "useHeadingContent": "warn",
        "useIframeTitle": "warn",
        "useMediaCaption": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn",
        "noDangerouslySetInnerHtmlWithChildren": "error",
        "noGlobalEval": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "options": {
            "attributes": ["className", "class"],
            "functions": ["cn", "clsx", "cva", "tw"]
          },
          "fix": "safe"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "double"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": false
    },
    "globals": ["React", "JSX"]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    },
    "linter": {
      "enabled": false
    }
  },
  "overrides": [
    {
      "includes": ["*.ts", "*.tsx", "*.mts", "*.cts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      }
    },
    {
      "includes": ["*.ts", "*.tsx", "*.mts", "*.cts"],
      "javascript": {
        "globals": []
      }
    },
    {
      "includes": ["**/.eslintrc.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": ["**/tsconfig.json", "**/jsconfig.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["**/convex/_generated/**"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
